---
import Logo from "./Logo.astro";
import NavIcons from "./NavIcons.astro";
import Button from "./Button.astro";
---

<header class="banner">
  <Logo />
  <nav class="dropdownmenu menu">
    <ul>
      <li><a href="/lineup">Lineup</a></li>
      <li><a href="/about">About</a></li>
      <li>
        <div class="info">
          <a href="#">Info</a>
        </div>
        <ul id="submenu">
          <li><a href="/booking">Booking</a></li>
          <li><a href="#">Volunteer</a></li>
          <li><a href="#">Rules</a></li>
          <li><a href="#">Map</a></li>
          <li><a href="#">Food & drinks</a></li>
        </ul>
      </li>
    </ul>
  </nav>
  <div class="button">
    <Button variant="primary">Buy ticket</Button>
    <NavIcons />
  </div>
</header>
<style>
  header {
    margin-bottom: var(--space-xxl);
  }

  @media (min-width: 821px) {
    .dropdownmenu {
      background-color: transparent;
      width: 100%;
      display: flex;
      justify-content: center;
      padding-top: var(--space-xl);
      padding-bottom: var(--space-xxxl);
    }

    .dropdownmenu ul {
      list-style: none;
    }

    .dropdownmenu li {
      float: left;
      position: relative;
      width: auto;
    }

    .dropdownmenu a {
      color: var(--black);
      display: block;
      font-size: var(--font-size-h4);
      font-family: "montserrat", sans-serif;
      font-weight: 700;
      font-style: normal;
      text-transform: uppercase;
      padding: 15px 25px;
      margin-inline: 70px;
      text-decoration: none;
      transition: all 0.25s ease;
    }

    .dropdownmenu li:hover a {
      color: #545454;
    }

    #submenu {
      left: -45px;
      opacity: 0;
      position: absolute;
      top: 45px;
      visibility: hidden;
      z-index: 1;
    }

    li:hover ul#submenu {
      opacity: 1;
      top: 60px;
      visibility: visible;
    }

    #submenu li {
      float: none;
      width: 100%;
    }

    #submenu a {
      background-color: #c1b5a6;
    }

    #submenu a:hover {
      color: var(--black);
    }

    .button {
      float: right;
      position: relative;
      top: -55px;
      right: 50px;
    }
  }
</style>
