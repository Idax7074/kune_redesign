---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <script src="https://kit.fontawesome.com/2efe57052b.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.typekit.net/jfp2fyt.css" />
    <title>{title}</title>
  </head>

  <body data-title={title}>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>

  <style>
    body[data-title="Kune Festival"] {
      background: var(--one);
    }

    body [data-title="lineup"] {
      max-width: 1000px;
    }
    ul {
      display: flex;
      list-style-type: none;
      gap: 1rem;
    }

    @media (max-width: 1200px) {
      main > section {
        margin-inline: 10px;
      }
    }
  </style>
</html>
