---
import Logo from "./Logo.astro";
import NavIcons from "./NavIcons.astro";
import Button from "./Button.astro";
---

<header class="banner">
  <div class="logo">
    <Logo />
  </div>
  <div class="mapButton">
    <Button variant="primary">Map</Button>
  </div>
  <nav class="dropdownmenu menu">
    <button class="toggle-btn">
      <span class="bar1"></span>
      <span class="bar2"></span>
      <span class="bar3"></span>
    </button>
    <ul>
      <li class="logo-burger"><a href="/"><img src="/favicon.svg" alt="" /></a></li>
      <li><a href="/lineup">Lineup</a></li>
      <li><a href="/about">About</a></li>
      <li>
        <div class="info">
          <a href="#">Info</a>
        </div>
        <ul id="submenu">
          <li><a href="/components-list">Booking</a></li>
          <li><a href="#">Volunteer</a></li>
          <li><a href="#">Rules</a></li>
          <li><a href="#">Map</a></li>
          <li><a href="#">Food & drinks</a></li>
        </ul>
      </li>
    </ul>
  </nav>
  <div class="button">
    <Button variant="primary">Buy ticket</Button>
    <NavIcons />
  </div>
</header>

<script src="../scripts/burger.js"></script>

<style>
  header {
    margin-bottom: var(--space-xxl);
  }

  @media (min-width: 1201px) {
    .logo-burger {
      display: none;
    }
    .mapButton {
      display: none;
    }
    .dropdownmenu {
      background-color: transparent;
      width: 100%;
      display: flex;
      justify-content: center;
      padding-top: var(--space-xl);
      padding-bottom: var(--space-xxxl);
    }

    .dropdownmenu ul {
      list-style: none;
    }

    .dropdownmenu li {
      float: left;
      position: relative;
      width: auto;
    }

    .dropdownmenu a {
      color: var(--black);
      display: block;
      font-size: var(--font-size-h4);
      font-family: "montserrat", sans-serif;
      font-weight: 700;
      font-style: normal;
      text-transform: uppercase;
      padding: 15px 25px;
      margin-inline: 70px;
      text-decoration: none;
      transition: all 0.25s ease;
    }

    .dropdownmenu li:hover a {
      color: #545454;
    }

    #submenu {
      left: -45px;
      opacity: 0;
      position: absolute;
      top: 45px;
      visibility: hidden;
      z-index: 1;
    }

    li:hover ul#submenu {
      opacity: 1;
      top: 60px;
      visibility: visible;
    }

    #submenu li {
      float: none;
      width: 100%;
    }

    #submenu a {
      background-color: #c1b5a6;
    }

    #submenu a:hover {
      color: var(--black);
    }

    .button {
      float: right;
      position: relative;
      top: -55px;
      right: 50px;
    }
  }

  .toggle-btn {
    background: transparent;
    border: none;
    cursor: pointer;
    display: none;
    min-width: 44px;
    min-height: 44px;
  }

  @media (max-width: 1420px) and (min-width: 1200px) {
    .dropdownmenu a {
      margin-inline: 10px;
    }
  }
  @media (max-width: 1200px) {
    .logo-burger img {
      width: 10%;
      height: auto;

      margin-bottom: 20px;
    }

    .logo-burger img:hover {
      opacity: 0.4;
    }
    .button {
      display: none;
    }

    .logo {
      display: none;
    }

    .banner {
      background: transparent;
      padding: 2rem;

      display: flex;
      flex-flow: wrap;
      justify-content: space-between;
      align-items: center;
      gap: 20px 40px;
    }

    #submenu {
      margin-left: 15px;
    }
    .menu.shown a {
      color: var(--black);
      text-decoration: none;
      text-transform: uppercase;
      line-height: 1.5rem;
    }

    .menu.shown a:hover {
      font-family: "montserrat", sans-serif;
      font-weight: 700;
      font-style: normal;
    }

    .toggle-btn {
      display: block;
    }

    .toggle-btn span {
      display: block;
    }

    .menu.shown {
      display: contents;
    }

    .menu ul {
      display: none;
    }

    .menu.shown > ul {
      border-top: 1px solid var(--black);
      padding-top: 1rem;
    }

    .menu.shown ul {
      display: flex;
      flex-flow: column;
      flex-basis: 100%;
      list-style: none;
      gap: 12px;
      font-size: 1.2rem;
    }

    .bar1,
    .bar2,
    .bar3 {
      width: 35px;
      height: 5px;
      background-color: var(--black);
      margin: 6px 0;
      border-radius: 5px;
      transition: 0.4s;
    }

    .change .bar1 {
      transform: translate(0, 11px) rotate(-45deg);
    }

    .change .bar2 {
      opacity: 0;
    }

    .change .bar3 {
      transform: translate(0, -11px) rotate(45deg);
    }
  }
</style>
